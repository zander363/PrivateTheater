<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mrb.test.ooad">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoggingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BookingActivity"
            android:label="立即訂票"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RefundingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SearchingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SearchingTimeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SearchingRatingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MovieListActivity"
            android:label="現正熱映"
            android:screenOrientation="portrait" />
        <activity android:name=".RootActivity" />
        <activity android:name=".MovieDetailActivity"></activity>
    </application>

</manifest>