<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mrb.test.ooad.MainActivity">

    <GridLayout
        android:layout_width="299dp"
        android:layout_height="335dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/movieButton"
            style="@android:style/Widget.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/movies" />

        <ImageButton
            android:id="@+id/bookingButton"
            style="@android:style/Widget.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            app:srcCompat="@mipmap/booking" />

        <TextView
            android:id="@+id/movieText"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="目前熱映"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/bookingText"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="訂票"
            android:textAlignment="center" />

        <Space
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1" />


        <ImageButton
            android:id="@+id/searchingButton"
            style="@android:style/Widget.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            app:srcCompat="@mipmap/searching" />

        <ImageButton
            android:id="@+id/userButton"
            style="@android:style/Widget.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            app:srcCompat="@mipmap/user_center" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_column="0"
            android:layout_row="2" />

        <TextView
            android:id="@+id/SearchingButton"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="條件搜詢"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/userText"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="4"
            android:text="會員專區"
            android:textAlignment="center" />
    </GridLayout>

</android.support.constraint.ConstraintLayout>
