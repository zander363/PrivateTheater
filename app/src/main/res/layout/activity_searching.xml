<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mrb.test.ooad.SearchingActivity">

    <GridLayout
        android:layout_width="302dp"
        android:layout_height="321dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/ratingButton"
            style="@android:style/Widget.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/searching_rate" />

        <Space
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0" />

        <ImageButton
            android:id="@+id/timeButton"
            style="@android:style/Widget.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            app:srcCompat="@mipmap/searching_time" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_column="0"
            android:layout_row="2" />

        <TextView
            android:id="@+id/rateText"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="依評分搜尋"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="依時間搜尋"
            android:textAlignment="center" />

        <ImageButton
            android:id="@+id/seatButton"
            style="@android:style/Widget.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            app:srcCompat="@mipmap/searching_seat" />

        <TextView
            android:id="@+id/seatText"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="依剩餘座位搜尋"
            android:textAlignment="center" />
    </GridLayout>
</android.support.constraint.ConstraintLayout>
